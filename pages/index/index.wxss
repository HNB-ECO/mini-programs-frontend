page{
    height: 100%;
    position: relative;
}
.bg-default {
    background-color: white;
}
swiper {
    padding: 20rpx 0;
}
.slide-image {
    width: 100%;
    height: 100%;
}
.container{
    height: 100%;
}
.classify-nav{
    height: 80rpx;
    position: fixed;
    top: 64px;
    white-space: nowrap; 
    font-size: 41rpx;
    font-weight: 500;
    background-color: white;
}
.nav-item{
    display: inline-block;
    margin: 0 20rpx;
    border-bottom: 6rpx solid transparent;
    position: relative;
    top:2rpx;
    height: 76rpx;
    line-height: 70rpx;
    color: rgba(255,255,255,0.4);
    box-sizing: border-box;
}
.item-select{
    color: white;
}
.item-select-first {
    color: black;
}
.item-first {
    color: #CCC;
}
.classify-content{
    height: calc(100% - 80rpx);
    position: fixed;
    bottom: -64px;
}
.classify-content .more-paint{
    padding: 15rpx 50rpx 150rpx;
}

.more-paint view{
    background: white;
}
.more-paint .item {
    margin: 15rpx 10rpx;
}
.more-paint .item .browse-num{
    height: 130rpx;
    line-height: 130rpx;
    color: #999999;
    font-size: 36rpx;
    padding-left: 30rpx;
}
.more-paint .item image {
    border-radius: 0;
}

.content-scrolls {
    background-color: white;
}
.content-scrolls .title {
    padding: 20rpx;
    text-align: center;
}
.content-scrolls .tit-icon {
    width: 36rpx;
    height: 36rpx;
    display: inline-block;
}
.content-scrolls .tit-icon image {
    width: 100%;
    height: 100%;
    float: left;
    margin-top: 4rpx;
}

.content-scrolls .x-item {
    width: 320rpx;
    display: inline-block;
    margin: 0 10rpx;
}
.content-scrolls scroll-view {
    width: 96%;
    padding: 0 2%;
    white-space:nowrap;
    /* height: 636rpx; */
}
.content-scrolls .x-item .img-view {
    height: 488rpx;
    width: 320rpx;
    display: inline-block;
    border-radius: 10rpx;
    background-position:center;
    background-repeat:no-repeat;
    background-size:contain;
}
.content-scrolls .x-item .name {
    position: absolute;
    top: 360rpx;
    width: 320rpx;
    text-align: center;
    color: white;
}
.content-scrolls .x-item .name .types {
    display: inline-block;
    background-color: white;
    color: black;
    font-size: 22rpx;
    padding:5rpx 10rpx;
    border-radius:8rpx;
}
.content-scrolls .x-item .des-view {
    width: 320rpx;
}
.content-scrolls .x-item .des-view .des {
    font-size: 30rpx;
    width: 320rpx;
    overflow:hidden;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
    line-height: 120%;
    white-space:normal;
}
.x-item .des-view .price {
    font-size:38rpx;
    color:#FD2841;
}
.x-item .des-view .bz {
    color: #999999;
    font-size: 22rpx;
    text-align: right;
    line-height: 60rpx;
}

